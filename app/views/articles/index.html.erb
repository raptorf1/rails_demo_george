<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.content %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "You selected to delete the article with title '#{article.title}'. Are you sure?" } %></td>
    </tr>
  <% end %>
</table>